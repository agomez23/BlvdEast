function relativity_node_list_load($type, $parent) {
  if (is_numeric($parent)) {
    //check if parent node actually exists
    if (db_result(db_query("SELECT COUNT(nid) FROM {node} WHERE nid=%d", $parent))) {
      if (array_key_exists($type, relativity_node_list())) {
        return $type;
      }
    }
  }
  return FALSE;
}

function relativity_menu_alter(&$item) {
  if (variable_get('relativity_enforce_parent_rules', FALSE)) {

    // iterate through all node types and take over their node/add handlers
    foreach (relativity_node_list() as $type => $name) {
      if (relativity_requires_parent($type)) {
        $type = str_replace('_', '-', $type);        //need to change _ to -

        $item['node/add/'. $type .'/parent/%node'] = $item['node/add/'. $type];
        unset($item['node/add/'. $type]);
      }
    }
  }
}

