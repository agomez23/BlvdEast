      $tokens['parent-mod-date']       = date('n', $parent->changed);
      $tokens['parent-mod-day']        = date('l', $parent->changed);
      $tokens['parent-mod-ddd']        = date('d', $parent->changed);
      $tokens['parent-mod-dd']         = date('d', $parent->changed);
      $tokens['parent-mod-d']          = date('j', $parent->changed);

      // Now get the menu related information.
      global $_menu;
      $trail = array();
      $placeholders = array();

	//patch for token 6.16 compat
	if(!function_exists('token_menu_get_mid'))
		require_once 'token_menu_get_mid.inc';

      $mid = token_menu_get_mid('node/'. $parent->nid);

      while ($mid && $_menu['visible'][$mid]) {
        array_unshift($trail, $_menu['visible'][$mid]['title']);
        $mid = $_menu['visible'][$mid]['pid'];
      }

      if (isset($trail)) {
        $tokens['parent-menupath']     = check_plain(implode('/', $trail));
        $tokens['parent-menu']         = check_plain(array_shift($trail));
      }
      else {
        $tokens['parent-menu']         = '';
        $tokens['parent-menupath']     = '';
      }
    }

    else {
      $tokens['parent-nid']            = '';

      $tokens['parent-title']          = '';

      $tokens['parent-type']           = '';

      $tokens['parent-type-name']      = '';

      $tokens['parent-author-uid']     = '';

      $tokens['parent-author-name']    = '';

      $tokens['parent-yyyy']           = '';

      $tokens['parent-yy']             = '';

      $tokens['parent-month']          = '';

      $tokens['parent-mon']            = '';

      $tokens['parent-mm']             = '';

      $tokens['parent-m']              = '';

      $tokens['parent-ww']             = '';

      $tokens['parent-date']           = '';

      $tokens['parent-day']            = '';

      $tokens['parent-ddd']            = '';

      $tokens['parent-dd']             = '';

      $tokens['parent-d']              = '';

      $tokens['parent-mod-yyyy']       = '';

      $tokens['parent-mod-yy']         = '';

      $tokens['parent-mod-month']      = '';

      $tokens['parent-mod-mon']        = '';

      $tokens['parent-mod-mm']         = '';

      $tokens['parent-mod-m']          = '';

      $tokens['parent-mod-ww']         = '';

      $tokens['parent-mod-date']       = '';

      $tokens['parent-mod-day']        = '';

      $tokens['parent-mod-ddd']        = '';

      $tokens['parent-mod-dd']         = '';

      $tokens['parent-mod-d']          = '';

      $tokens['parent-menu']         = '';
