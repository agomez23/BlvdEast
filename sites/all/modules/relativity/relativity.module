      '#description' => t('What node types are allowed to be used in this block?'),
      '#size' => 5,
      '#multiple' => TRUE,
    );
    return $form;
  }
  else if (($op == 'save') && ($delta == 0)) {
    variable_set('relativity_nav_types', $edit['relativity_nav_types']);
  }
  else if ($op == 'view') {
    $block = array();

    // see if we're viewing a node
    if (arg(0) == 'node' && is_numeric(arg(1))) {
      // see if it's a valid node
      $node = menu_get_object();
      if (is_object($node) && node_access('view', $node)) {
        switch ($delta) {
          case 0:
            $ancestors = relativity_load_ancestors($node, 1, TRUE);
            if (is_array($ancestors) && count($ancestors) > 0) {
              $block['subject'] = check_plain(variable_get('relativity_ancestors_label', t('Related Ancestors')));
              $block['content'] = theme('relativity_block_ancestors', $node, $ancestors);
            }
            break;
          case 1:
            $content = theme('relativity_block_children', $node);
            if ($content) {
                $block['subject'] = check_plain(variable_get('relativity_children_label', t('Related Items')));
                $block['content'] = $content;
            }
            break;
          case 2:
            $content = theme('relativity_block_parents', $node);
            if ($content) {
                $block['subject'] = check_plain(variable_get('relativity_parents_label', t('Related Parents')));
                $block['content'] = $content;
